.first-main
  .first-main__header
    .first-main__header__imgage
      .first-main__header__imgage__margin
        = link_to ".." do
          = image_tag "fmarket_logo_red.svg",class:"first-main__header__imgage__size"

  .first-main__middle
    .first-main__middle__box
      .first-main__middle__box__account
        .first-main__middle__box__account__text
          アカウントをお持ちでない方はこちら
        .first-main__middle__box__account__button
          = link_to "/signup/step1" ,class:"account-color" do
            .first-main__middle__box__account__button__margin
              新規会員登録

      .first-main__login
        .first-main__login__box
          .first-main__login__box__facebook
            .first-main__box__main__form__top__facebook
              %button{class:"facebook-box"}
                = icon('fab', 'facebook-square', class:"facebook-icon")
                .first-main__box__main__form__top__facebook__text
                  Facebookで登録する
  
            .first-main__box__main__form__top__google
              %button{class:"google-box"}
                = icon('fab', 'google', class:"google-icon")
                .first-main__box__main__form__top__google__text
                  Googleで登録する
  
      .first-main__form
        .first-main__form__box
          .first-main__form__box__input
            %input{placeholder: "メールアドレス", type: "email", class: "input-boxx"}
          .first-main__form__box__pass
            %input{placeholder: "パスワード", type: "password", class: "input-boxx"}

          .first-main__box__main__form__under__contents

          .first-main__box__main__form__top__button
            %button{type:"submit",class:"first-main__box__main__form__under__link"}
              ログイン

          .first-main__form__box__info
            = link_to "#" , class:"pass-box" do
              パスワードをお忘れの方
          

  = render "signup/footer"